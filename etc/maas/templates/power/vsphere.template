# -*- mode: shell-script -*-
#
# Control a vSphere/ESX/ESXi system using python-pyvmomi.

# Exit with failure message.
# Parameters: exit code, and error message.
fail() {
    echo "$2" >&2
    exit $1
}

issue_vsphere_command() {
python - << END
import sys
from provisioningserver.drivers.hardware.vsphere import power_control_vsphere
try:
    power_control_vsphere(
        {{escape_py_literal(power_address) | safe}},
        {{escape_py_literal(power_user) | safe}},
        {{escape_py_literal(power_pass) | safe}},
        {{escape_py_literal(power_uuid) | safe}},
        {{escape_py_literal(power_change) | safe}},
        port={{escape_py_literal(power_port) | safe}},
        protocol={{escape_py_literal(power_protocol) | safe}}
    )
except Exception as e:
    # This gets in the node event log: print the exception's message
    # and not the stacktrace.
    print(unicode(e))
    sys.exit(1)
END
}

query_state() {
python - << END
import sys
from provisioningserver.drivers.hardware.vsphere import power_query_vsphere
try:
    print(power_query_vsphere(
        {{escape_py_literal(power_address) | safe}},
        {{escape_py_literal(power_user) | safe}},
        {{escape_py_literal(power_pass) | safe}},
        {{escape_py_literal(power_uuid) | safe}},
        port={{escape_py_literal(power_port) | safe}},
        protocol={{escape_py_literal(power_protocol) | safe}}
    ))
except Exception as e:
    # This gets in the node event log: print the exception's message
    # and not the stacktrace.
    print(unicode(e))
    sys.exit(1)
END
}

main() {
    case $1 in
    'on'|'off')
        issue_vsphere_command
        ;;
    'query')
        query_state
        ;;
    *)
        fail 2 "Unknown power command: '$1'"
    esac
}

main "{{power_change}}"
